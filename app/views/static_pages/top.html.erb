<% provide(:title, "Top") %>
<div class="row">
  <div class="col-md-7">
    <div class="center jumbotron" id="top-main">
      <h1 id="top-main-title">TaskApp</h1>
      <p>TaskAppは簡易ToDo管理ツールです。</p>
      <p>↓↓初めてのご利用↓↓</p>
      <%= link_to "アカウント作成", new_user_path, class: "btn btn-lg btn-success" %>
      <% unless logged_in? %>
      <div style="margin-top: 10px">
        <%= link_to "ゲストログイン（管理権限）", login_path, class: "btn btn-danger" %>
        <%= link_to "ゲストログイン（一般権限）", login_path, class: "btn btn-warning" %>
      </div>
      <% end %>
    </div>
  </div>
  <div class="col-md-4">
    <h1>ログイン</h1>
    <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
      <% if logged_in? %>
        <%= f.label :email, "メールアドレス", class: "label-login" %>
        <%= f.email_field :email, class: 'form-control', readonly: "readonly" %>
        
        <%= f.label :password, "パスワード", class: "label-login" %>
        <%= f.password_field :password, class: 'form-control', readonly: "readonly" %>
        
        <%= f.submit "ログイン状態です", class: "btn btn-primary btn-block btn-login", disabled: "disabled" %>
      <% else %>
        <%= f.label :email, "メールアドレス", class: "label-login" %>
        <%= f.email_field :email, class: 'form-control' %>
        
        <%= f.label :password, "パスワード", class: "label-login" %>
        <%= f.password_field :password, class: 'form-control' %>
        
        <%= f.label :remember_me, class: "checkbox inline checkbox-login", for: "remember-me" do %>
          <%= f.check_box :remember_me, id: "remember-me" %>
          <span>ログイン情報を記憶する</span>
        <% end %>
        
        <%= f.submit "ログイン", class: "btn btn-primary btn-block btn-login" %>
      <% end %>
    <% end %>
  </div>
</div>
