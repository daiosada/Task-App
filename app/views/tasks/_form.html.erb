<%= form_with(model: [@user, @task], local: true) do |f| %>
  <%= render 'shared/error_messages', object: @task %>
  
  <%= f.label :name, class: "label-form" %>
  <%= f.text_field :name, class: "form-control" %>
  
  <%= f.label :detail, class: "label-form" %>
  <%= f.text_area :detail, rows: "5", class: "form-control" %>
  
  <%= f.submit yield(:button_text), class: "btn btn-lg btn-primary btn-form" %>
  <%= link_to "キャンセル", user_tasks_path(@user), class: "btn btn-default btn-form" %>
<% end %>